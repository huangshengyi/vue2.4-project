// 1px边框
border-1px($color)
  position: relative
  &:after
    content: ''
    display: block
    position: absolute
    left: 0
    bottom: 0
    width: 100%
    border-top: 1px solid $color

// 去掉1px的边框
border-none()
  &:after
    display: none

// 处理@2x 和 @3x 的背景图片
bg-image($url)
  background-image: url($url + '@2x.png')
  @media (-webkit-min-device-pixel-ratio: 3),(min-device-pixel-ration: 3)
    background-image: url($url + '@3x.png')
